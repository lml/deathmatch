whitish = #ededed
wheatish = #f2f0d3
beige = #f5f5dc
blackish = #444
grey = #ccc
textgrey = #999
bluish = #4488cc
lightbluish = #2266ff

global-reset()

body
    background-color whitish
    color            blackish
    
article.main
  width 1024px
  min-height 800px
  margin 0 auto
  background-color white
  padding 24px
  
.ql-box
  margin 12px
  background-color white
  border 1px solid grey
  
.ql-toolbar
  border-bottom 1px solid grey
  
.ql-footer
  border-top 1px solid grey
  padding 8px
  text-align right
  
.hoverable
  position relative
  .on-hover
    position absolute
    display none
  &:hover
    .on-hover
      display inline-block
      
.has-drawer
  position relative
  
  .drawer
    position absolute
    left 100%
    top  0px
    display inline-block
    width 240px
    margin-left 24px
    
.action-panel
  padding 4px
  background-color white
  border-radius right 8px
  .action
    padding 2px 8px
    margin 4px 8px
    display block
  h4
    font-size 12px
    color textgrey
    padding 4px 16px

button.action
  background transparent
  cursor pointer
  padding 8px 12px
  border 0
  color bluish
  &:hover
    color lightbluish
 
button.secondary
  &:hover
    text-decoration underline
  
button.primary
  border 1px solid grey
  background-color whitish

.content-container
  margin 24px 0
  &.mode-edit
    .editor-container
      display block
    .viewer-container
      display none
    .prompter-container
      display none
  &.mode-view
    .editor-container
      display none
    .viewer-container
      display block
    .prompter-container
      display none
  &.mode-prompt
    .editor-container
      display none
    .viewer-container
      display none
    .prompter-container
      display block
      
.prompter-container div
  text-align center
  border 1px dotted grey
  border-radius 5px
  padding 24px
  cursor pointer
  background-color beige
  .prompt-add-tip
    display none
  .prompt-edit-tip
    display inline
  .empty-content
    .prompt-add-tip
      display inline
    .prompt-edit-tip
      display none

.viewer-container div
  cursor pointer
  border 1px dotted transparent
  border-radius 4px
  padding 12px
  .action
    top 0px
    right 0px
  &:hover
    border-color grey

.part-container
  margin 12px 0
  min-height 240px
  
ol.numbered
  list-style-type decimal !ie
  margin 0
  margin-left 3em
  counter-reset li-counter
  
  > li
    border-bottom 1px dotted whitish
  
  > li:before
    position absolute
    top 0px
    left -2em
    width 0.8em
     
    font-size 1.5em
    line-height 1
    font-weight bold
    text-align right
 
    content counter(li-counter) ")"
    counter-increment li-counter
    
ol.letters
  list-style-type lower-alpha !ie
  margin 0
  margin-left 2.5em
  counter-reset li-counter
    
  > li:before
    position absolute
    top -1px
    left -2em
    width 0.8em
     
    font-size 1em
    line-height 2em
    text-align right
 
    content "(" counter(li-counter, lower-alpha) ")"
    counter-increment li-counter

.choice-item
  max-width 80%
  line-height 2em

